<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="NormalButton" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="android:layout_margin">@dimen/dp_1</item>
        <item name="android:background">@color/background_button</item>
        <item name="android:textSize">@dimen/sp_30</item>
    </style>

    <style name="NormalInput" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@color/background_button</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textSize">@dimen/sp_40</item>
        <item name="android:lines">1</item>
        <item name="android:editable">false</item>
    </style>
</resources>
